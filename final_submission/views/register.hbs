<title>Sign Up - Forum Web Application</title>
<link rel="stylesheet" type="text/css" href="static/stylesheets/register.css">
<script src="static/js/register.js"></script>

<div class="container">
    <div class="signup-container">
        <h2>Sign Up</h2>
    </div>

    <div class="register-container">
        <div class="register-header">
        
        </div>
        <form id="register-form" action="/make-user" method="post">
            <label for="realname">Name:</label>
            <input type="text" id="realname" name="realname" required>

            <label for="email">Email:</label> 
            <input type="email" id="email" name="email" required> 

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>

            <label for="username">Username:</label> 
            <input type="text" id="username" name="username" required> 

            <button type="submit" id="registerBtn">Register</button>
            <p>Didn't mean to register? <a href="/home">Cancel</a>.</p>
            <p id="errorm"></p>
        </form>
    </div>
</div>
